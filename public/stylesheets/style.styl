//switch checkbox
.switch-container > span
    position:relative
    top:2px
    left:4px
.block-switch
    position:relative
    display:inline-block
    vertical-align:top
    height:20px
    padding:3px
    background-color:white
    border-radius:18px
    cursor:pointer
.block-switch > .checkbox-switch //仅用做功能 不用做样式
    position:absolute
    top:0
    left:0
    opacity:0
.label-switch
    position: relative
    display:block
    font-size:10px
    height:inherit
    width:56px
    text-transform:uppercase //测试用
    background:color_gye
    border-radius: inherit
    &:before
    &:after
        position:absolute
        top:50%
        margin-top:-0.5em
        line-height:1
    &:before
        content: attr(data-off)
        right: 11px
        color: color_gya
        box-shadow:inset 0 0 2px 1px color_gye
    &:after
        content: attr(data-on)
        left: 11px
        color:white
        opacity:0
    .block-switch > .checkbox-switch:checked ~ &
        background-color:#47a8d8
        &:before
            opacity:0
        &:after
            opacity:1
.handle-switch
    position:absolute
    top:4px
    left:4px
    width:18px
    height:18px
    background-color:white
    border-radius:10px
    box-shadow:0 0 1px 1px color_gye
    .block-switch > .checkbox-switch:checked ~ &
        left:40px

.submit
    border-top:1px dotted color_gye
.submit > input[type="submit"]
    font-size:font-size
    margin:0.5*font-size 0 
    padding:0.5*font-size font-size
    box-shadow 0 0 0 0 white
    border-radius:0
    color:white
    background-color:color_g1
    border:none
    opacity:0.8
    &:hover
        cursor:pointer
        opacity:1

//upload file
#upload-container
    overflow:auto
#upload-file
    z-index: 999
    position:absolute
    opacity:0
    cursor:pointer
    _cursor:hand
    left:0
    height:2*font-size
    width:97px
#upload-label
    position:relative
    overflow:hidden
    text-align:center
    background-color:color_g1
    color:#fff
    display:block
    width:97px
    height:2*font-size - 3px //修正字体无法居中问题
    padding-top:3px
    float:left;
    margin-left:0.5*font-size
    opacity:0.9
    &:hover
        opacity:1
        cursor:pointer
    & > p
        height:100%
#upload-text
    float:left
    height:2*font-size - 4px 
    width:304px
#data-show-dir-name
    margin:font-size 0
    padding-bottom:0.2*font-size
    border-bottom:1px dotted color_gyd
    & > span
        & > span 
            margin:0 0.5*font-size
        & > a:hover
            color:white
            background-color:color_g1
                
#data-show-file-name
    margin:font-size 0
    overflow:auto
    & > div
        width:((960px - 6*font-size) / 4)
        padding:0 font-size 0 0
        float:left
        line-height:3*font-size
        & > a
            padding:0.5*font-size
            &:hover
                cursor:pointer
                color:color_g1

#data-show-opt
    margin:font-size 0
    padding-top:0.2*font-size
    border-top:1px dotted color_gyd
    & > span
        margin-left:2*font-size
        cursor:pointer
        &:first-child
            margin:0
        & > a
            color:color_gyd
            padding:0 1*font-size
        & > span
